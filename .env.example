# Server Configuration
BIND_ADDR=127.0.0.1:3000
PUBLIC_URL=http://127.0.0.1:3000

# HTTPS/TLS Configuration
# Set to true to enable HTTPS with self-signed certificate
ENABLE_HTTPS=false
# Path to TLS certificate (will be auto-generated if missing and TLS_AUTO_GENERATE=true)
TLS_CERT_PATH=./cert.pem
# Path to TLS private key (will be auto-generated if missing and TLS_AUTO_GENERATE=true)
TLS_KEY_PATH=./key.pem
# Auto-generate self-signed certificate if cert/key not found
TLS_AUTO_GENERATE=true

# Storage Configuration
STORAGE_PATH=./files
MAX_TOTAL_SIZE=99999
MAX_TOTAL_FILES=99999999
CLEANUP_INTERVAL_SECS=30
MAX_FILE_AGE_DAYS=0

# Upstream Configuration (for caching proxy mode)
# UPSTREAM_SERVERS=https://cdn.satellite.earth,https://blossom.primal.net
MAX_UPSTREAM_DOWNLOAD_SIZE_MB=100

# Upload Configuration
MAX_CHUNK_SIZE_MB=100
CHUNK_CLEANUP_TIMEOUT_MINUTES=30

# Authorization Configuration
# ALLOWED_NPUBS=npub1...,npub2...

# Feature Flags
FEATURE_UPLOAD_ENABLED=public
FEATURE_MIRROR_ENABLED=public
FEATURE_LIST_ENABLED=true
FEATURE_CUSTOM_UPSTREAM_ORIGIN_ENABLED=off
FEATURE_HOMEPAGE_ENABLED=true
FEATURE_REPORT_ENABLED=off

# Report Configuration
REPORT_ACTION=quarantine

# Cashu Payment Configuration (BUD-07)
FEATURE_PAID_UPLOAD=off
FEATURE_PAID_MIRROR=off
FEATURE_PAID_DOWNLOAD=off
CASHU_PRICE_PER_MB=1
# CASHU_ACCEPTED_MINTS=https://mint.example.com
CASHU_WALLET_PATH=./cashu_wallet.db

# Blossom Server List Configuration
BLOSSOM_SERVER_LIST_CACHE_TTL_HOURS=24

# DVM Discovery Configuration
# DVM_RELAYS=wss://nos.lol,wss://relay.damus.io,wss://relay.primal.net
# DVM_REFRESH_INTERVAL_MINS=5

# Filter Algorithm (bloom, binary-fuse-8, binary-fuse-16, binary-fuse-32)
FILTER_ALGORITHM=binary-fuse-16
